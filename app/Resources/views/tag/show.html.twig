{% extends 'base.html.twig' %}
{% import ':recipe:show_summary.html.twig' as r %}

{% block body %}
    <h1>Tag "{{ tag.name }}"</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tag.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tag.name }}</td>
            </tr>
            <tr>
                <th>Recipes tagged with this</th>
                <td>
                    <ul>
                    {% for recipe in tag.recipes %}
                        <li>{{ r.recipe_link(recipe) }}</li>
                    {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tag_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
