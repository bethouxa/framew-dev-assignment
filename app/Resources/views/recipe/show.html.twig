{% extends 'base.html.twig' %}

{% block body %}
    <h1>Recipe</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recipe.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ recipe.title }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ recipe.summary }}</td>
            </tr>
            <tr>
                <th>Public</th>
                <td>{% if recipe.public %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{% if recipe.author %}{{ recipe.author.name }}{% else %}(deleted account){% endif %}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ recipe.photo }}</td>
            </tr>
            <tr>
                <th>Ingredients</th>
                <td>
                    <ul>
                        {% for ingredient in recipe.ingredients %}
                        <li>{{ ingredient.toString }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
            <tr>
                <th>Steps</th>
                <td>
                    {{ recipe.steps }}
                </td>
            </tr>
            <tr>
                <th>Tags</th>
                <td>
                    <ul>
                        {% for tag in recipe.tags %}
                        <li>{{ tag.name }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
            <tr>
                <th>Personal tags:</th>
                <td>
                    <ul>
                        {% for tag in ptags %}
                            <li>{{ tag.name }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
            <tr>
                <th>Creation date</th>
                <td>{{ recipe.creationDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Last edit date</th>
                <td>{{ recipe.lastEditDate|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('homepage') }}">Back to your dashboard</a>
        </li>
        {% if app.user and app.user.username == recipe.author %}
        <li>
            <a href="{{ path('recipe_edit', { 'id': recipe.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
        {% endif %}
    </ul>
{% endblock %}
