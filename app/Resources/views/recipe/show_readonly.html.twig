{% extends 'base.html.twig' %}

{% block body %}
    <h1>Recipe</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recipe.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ recipe.title }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ recipe.summary }}</td>
            </tr>
            <tr>
                <th>Public</th>
                <td>{% if recipe.public %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ recipe.author.name }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ recipe.photo }}</td>
            </tr>
            <tr>
                <th>Ingredients</th>
                <td>
                    <ul>
                        {% for ingredient in recipe.ingredients %}
                        <li>{{ ingredient.toString }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
            <tr>
                <th>Steps</th>
                <td>
                    <ol>
                        {% for step in recipe.steps %}
                        <li>{{ step.content }}</li>
                        {% endfor %}
                    </ol>
                </td>
            </tr>
            <tr>
                <th>Tags</th>
                <td>
                    <ul>
                        {% for tag in recipe.tags %}
                        <li>{{ tag.name }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
            <tr>
                <th>Creationdate</th>
                <td>{{ recipe.creationDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Lasteditdate</th>
                <td>{{ recipe.lastEditDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ recipe.rating }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('homepage') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
