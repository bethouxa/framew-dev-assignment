{% macro coll_summ(collection) %}
    <h4><a href="{{ path('collection_show', {'id': collection.id}) }}">{{ collection.name }}</a> by {{ collection.owner }}</h4>
    <p>Shared: {% if collection.shared %}Yes{% else %}No{% endif %}</p>
    <ul>
        {% for recipe in collection.recipes %}
            <li><a href="{{ path('recipe_show', {'id': recipe.id}) }}">{{ recipe.name }}</a></li>
        {% endfor %}
    </ul>
{% endmacro %}
